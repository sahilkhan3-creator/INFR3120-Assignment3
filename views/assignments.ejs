<%- include("partials/header") %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Your Assignments</h2>
  <a href="/assignments/create" class="btn btn-success">+ New Assignment</a>
</div>

<% if (assignments.length === 0) { %>
  <p>No assignments yet. <a href="/assignments/create">Create one now.</a></p>
<% } else { %>
  <div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Course</th>
          <th>Due Date</th>
          <th>Status</th>
          <th style="width: 180px;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% assignments.forEach(a => { %>
          <tr>
            <td><%= a.title %></td>
            <td><%= a.course %></td>
            <td><%= a.dueDate.toLocaleDateString() %></td>
            <td><%= a.status %></td>
            <td>
              <a href="/assignments/edit/<%= a._id %>" class="btn btn-sm btn-primary">Edit</a>
              <a href="/assignments/delete/<%= a._id %>" class="btn btn-sm btn-danger">Delete</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
<% } %>

<%- include("partials/footer") %>
